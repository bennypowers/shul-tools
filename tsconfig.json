{
  "include": [
    "elements"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": true,
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "plugins": [
      {
        "transform": "typescript-transform-lit-css",
        "inline": true
      }
    ],
    "lib": [
      "DOM",
      "DOM.iterable",
      "DOM",
      "es2015.iterable",
      "es2020",
      "es2022",
      "ESNext.Disposable",
      "ESNext.collection",
      "ESNext.object",
      "es5",
      "es6",
      "ScriptHost",
      "esnext",
    ]
  },
}
